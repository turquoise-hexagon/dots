#!/bin/sh
#
# extract common archives

if [ -f "$1" ]; then
    case $1 in
        *.tar.bz2) tar xvf "$1";;
        *.tar.gz) tar xvf "$1";;
        *.tar.xz) tar xvf "$1";;
        *.tar) tar xvf "$1";;
        *.tgz) tar xvf "$1";;
        *.xz) tar xvf "$1";;
        *.gz) gunzip "$1";;
        *.zip) unzip "$1";;
        *) echo "'$1' cannot be extracted via extract."
    esac
else
    echo "'$1' is not a valid file"
fi
